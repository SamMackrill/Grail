<Window x:Class="Grail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grail"
        xmlns:viewModel="clr-namespace:Grail.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}" 
        Title="{Binding Source={x:Static viewModel:MainWindowViewModel.Title}, Mode=OneWay}"
        Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Content="{Binding Path=Version}" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Image Source="grail.png" Stretch="None"/>
    </StackPanel>
</Window>
